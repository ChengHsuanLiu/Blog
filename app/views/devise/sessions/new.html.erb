<div class="container">
  <div class="row">
    <div class="col s12">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, 'Email', class: 'white-text' %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, 'Password', class: 'white-text' %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions field">
          <%= f.submit "Log in", class: 'btn margin-top-m orange lighten-1' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
