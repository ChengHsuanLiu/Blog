<div class="container">
	<div class="row">
		<div class="col s12">
			<div class="card">
				<div class="card-content">
					<%= form_for [:admins, @post], html: { multipart: true } do |f| %>
						<div class="field">
							<%= f.label :title %>
							<%= f.text_field :title %>
						</div>
						<div class="field">
							<%= f.label :category_id %>
							<%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: 'browser-default'}) %>
						</div>
						<div class="field">
							<%= f.label :content %>
							<%= f.text_area :content %>
						</div>
						<div class="field">
							<%= f.label :excerpt %>
							<%= f.text_area :excerpt %>
						</div>
						<div class="field">
							<%= f.label :is_public %>
							<%= f.check_box :is_public %>
						</div>
						<div class="field">
							<%= f.submit 'Submit' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
